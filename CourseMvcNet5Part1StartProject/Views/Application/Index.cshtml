@model IEnumerable<CourseMvcNet5Part1StartProject.Models.Application>

@{
    ViewData["Title"] = "Application Page";
}

<div class="text-center">
    <h1 class="display-4">Application Type</h1>
</div>

<div class="=" container p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application List </h2>
        </div>
        <div class="col-6">
            <a asp-controller="Application" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;  Create New Application
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id </th>
                    <th>Application Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="35%">
                            @obj.Id
                        </td>
                        <td width="35%">
                            @obj.Name
                        </td>
                        <td class="text-center" width="30%">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Application" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> &nbsp;
                                </a>
                                <a asp-controller="Application" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i> &nbsp;
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            No Application exists.
        </p>
    }
</div>